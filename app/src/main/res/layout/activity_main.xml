<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.howietian.rxjavademo.MainActivity">

    <EditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:hint="输入链接" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_url"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Send" />

    <TextView
        android:id="@+id/tv_classify"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_send"
        android:layout_marginTop="8dp"
        android:text="分类结果" />

    <TextView
        android:id="@+id/tv_classify_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_classify"
        android:layout_marginTop="8dp"
        android:text="Git"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_classify_result"
        android:layout_marginTop="8dp"
        android:text="标签结果" />

    <TextView
        android:id="@+id/tv_tag_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tag"
        android:layout_marginTop="8dp"
        android:text="TAG"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

</RelativeLayout>
